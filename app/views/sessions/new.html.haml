.row
  .col-md-4.col-md-offset-4
    .well
      %h3.comicy-text Login to Comic Wall
      %hr
      = bootstrap_form_tag url: '/login' do |f|
        = f.email_field :email, placeholder: 'brucew@waynetech.com', autofocus: true
        = f.password_field :password
        = f.submit 'Login To Your Account', class: 'btn btn-success'
    = link_to 'Need an account?', register_path
